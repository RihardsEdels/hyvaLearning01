<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>My Account</title>
    </head>
    <body>
        <referenceContainer name="sidebar.main">
            <referenceBlock name="sidebar.main.account_nav">
                <action method="setTemplate">
                    <argument name="hyva_sidebar" xsi:type="string">Magento_Customer::sidebar/sidebar.phtml</argument>
                </action>
                <referenceBlock name="customer-account-navigation-delimiter-2" remove="true"/>
            </referenceBlock>
        </referenceContainer>
        <referenceContainer name="sidebar.additional" remove="true"/>
    </body>
</page>
